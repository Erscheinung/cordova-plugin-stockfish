    <source-file src="src/ios/stockfishios/stockfish/benchmark.cpp" />
    <source-file src="src/ios/stockfishios/stockfish/bitbase.cpp" />
    <source-file src="src/ios/stockfishios/stockfish/bitboard.cpp" />
    <header-file src="src/ios/stockfishios/stockfish/bitboard.h" />
