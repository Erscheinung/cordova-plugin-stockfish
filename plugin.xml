<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" id="cordova-plugin-stockfish" version="1.8.0">
  <name>Cordova Stockfish Plugin</name>
  <description>Cordova interface to Stockfish chess engine.</description>
  <author>SÃ©bastien Renault</author>
  <keywords>cordova,stockfish</keywords>
  <license>MIT</license>

  <js-module src="www/CordovaPluginStockfish.js" name="CordovaPluginStockfish">
    <clobbers target="Stockfish" />
  </js-module>

  <platform name="android">
    <framework src="build-extras-stockfish.gradle" custom="true" type="gradleReference" />

    <source-file src="src/android/org.lichess.stockfish/CordovaPluginStockfish.java" target-dir="src/org/lichess/stockfish" />
    <source-file src="src/android/jni" target-dir="app/src/main" />
    <source-file src="src/share/threadbuf.h" target-dir="app/src/main/jni/stockfishjni" />

    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="CordovaPluginStockfish">
        <param name="android-package" value="org.lichess.stockfish.CordovaPluginStockfish" />
      </feature>
    </config-file>
  </platform>

  <platform name="ios">
    <config-file target="config.xml" parent="/*">
      <feature name="CordovaPluginStockfish">
        <param name="ios-package" value="CordovaPluginStockfish" />
      </feature>
    </config-file>

    <header-file src="src/ios/CordovaPluginStockfish.h" />
    <source-file src="src/ios/CordovaPluginStockfish.mm" />
    <header-file src="src/ios/CordovaPluginStockfishc.h" />
    <header-file src="src/ios/CordovaPluginStockfishios.h" />
    <header-file src="src/share/threadbuf.h" />

    <header-file src="src/ios/stockfish/src/bitboard.h" />
    <header-file src="src/ios/stockfish/src/endgame.h" />
    <header-file src="src/ios/stockfish/src/evaluate.h"/>
    <header-file src="src/ios/stockfish/src/material.h" />
    <header-file src="src/ios/stockfish/src/misc.h" />
    <header-file src="src/ios/stockfish/src/movegen.h" />
    <header-file src="src/ios/stockfish/src/movepick.h" />
    <header-file src="src/ios/stockfish/src/pawns.h" />
    <header-file src="src/ios/stockfish/src/position.h" />
    <header-file src="src/ios/stockfish/src/search.h"/>
    <header-file src="src/ios/stockfish/src/thread.h" />
    <header-file src="src/ios/stockfish/src/thread_win32.h" />
    <header-file src="src/ios/stockfish/src/timeman.h" />
    <header-file src="src/ios/stockfish/src/tt.h" />
    <header-file src="src/ios/stockfish/src/uci.h" />
    <header-file src="src/ios/stockfish/src/types.h" />
    <header-file src="src/ios/stockfish/src/syzygy/tbprobe.h" />

    <source-file src="src/ios/stockfish/src/benchmark.cpp" />
    <source-file src="src/ios/stockfish/src/bitbase.cpp" />
    <source-file src="src/ios/stockfish/src/bitboard.cpp" />
    <source-file src="src/ios/stockfish/src/endgame.cpp" />
    <source-file src="src/ios/stockfish/src/evaluate.cpp" />
    <source-file src="src/ios/stockfish/src/material.cpp" />
    <source-file src="src/ios/stockfish/src/misc.cpp" />
    <source-file src="src/ios/stockfish/src/movegen.cpp" />
    <source-file src="src/ios/stockfish/src/movepick.cpp" />
    <source-file src="src/ios/stockfish/src/pawns.cpp" />
    <source-file src="src/ios/stockfish/src/position.cpp"/>
    <source-file src="src/ios/stockfish/src/psqt.cpp" />
    <source-file src="src/ios/stockfish/src/search.cpp" />
    <source-file src="src/ios/stockfish/src/thread.cpp" />
    <source-file src="src/ios/stockfish/src/timeman.cpp" />
    <source-file src="src/ios/stockfish/src/tt.cpp" />
    <source-file src="src/ios/stockfish/src/uci.cpp" />
